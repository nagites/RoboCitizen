	<%= render '/layouts/global/header' %>

	<div class="container-fluid">
		<div class="row-fluid">
			<div class="col-md-12">
				<%= yield %>
			</div>
		</div>
	</div>
	<%= render '/layouts/global/footer' %>
</body>
</html>